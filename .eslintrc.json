{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": ["airbnb-base", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": { "ecmaVersion": 2018 },
	"rules": {
		"no-await-in-loop": "off",
		"no-constant-condition": "off",
		"no-plusplus": "off",
		"camelcase": "off",
		"no-console": "off",
		"no-restricted-syntax": "off"
	}
}
